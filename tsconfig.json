{
"$schema": "https://json.schemastore.org/tsconfig",

  "_version": "18.2.0",

  "compilerOptions": {
    "lib": ["es2022"],
    "module": "Node16",
    "target": "es2022",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "outDir": "dist",
  },
  "include": [
    "./**/*.ts",
  ],
}